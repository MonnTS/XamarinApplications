<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReadWriteProperty.MainPage">

    <StackLayout>
        <Label Text="Welcome to Prokerka Application" 
               FontSize="Small" HorizontalTextAlignment="Center"/>

        <Label Text="Server URL" 
               FontSize="Micro" />

        <Entry x:Name="EntryConnection"
               FontSize="Small"/>
        <!--IsReadOnly="True" -->

        <Label Text="Application Key"
               FontSize="Micro"/>

        <Entry x:Name="ApplicationKey"
                FontSize="Small"/>
        <!--IsReadOnly="True" -->
        <Label Text="Name of Property"
               FontSize="Micro"/>

        <Entry x:Name="VerName"/>

        <Label Text="Current Value"
               FontSize="Micro"/>

        <Label x:Name="ValLab"
               Text="--" FontSize="Micro"/>

        <Button Text="Read"
                Clicked="btn_ClickedRead"/>

        <Label Text="New Value"
               FontSize="Micro"/>

        <Entry x:Name="EntryUpdate"/>

        <Button Text="Update"
               Clicked="btn_ClickedUpdate" />
    </StackLayout>
</ContentPage>
